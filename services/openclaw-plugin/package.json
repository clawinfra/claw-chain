{
  "name": "@clawchain/openclaw-plugin",
  "version": "1.0.0",
  "description": "OpenClaw integration plugin for ClawChain â€” DID registration and status skill",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@polkadot/api": "^14.0.1",
    "@polkadot/keyring": "^13.3.1",
    "@polkadot/util": "^13.3.1",
    "@polkadot/util-crypto": "^13.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": ["ts-jest", { "diagnostics": false }]
    },
    "testMatch": ["**/tests/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90,
        "functions": 90,
        "branches": 80,
        "statements": 90
      }
    },
    "moduleNameMapper": {
      "@polkadot/api": "<rootDir>/tests/__mocks__/@polkadot/api.ts",
      "@polkadot/keyring": "<rootDir>/tests/__mocks__/@polkadot/keyring.ts",
      "@polkadot/util-crypto": "<rootDir>/tests/__mocks__/@polkadot/util-crypto.ts"
    }
  }
}
